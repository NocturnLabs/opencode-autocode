{
  "version": "1.0",
  "description": "Template routing index for Progressive Discovery",
  
  "core": {
    "always_include": [
      "core/identity.xml",
      "core/security.xml"
    ],
    "on_demand": {
      "signaling": "core/signaling.xml",
      "database": "core/database.xml",
      "mcp": "core/mcp_guide.xml"
    }
  },
  
  "project_types": {
    "web": {
      "modules": ["modules/javascript.xml", "modules/testing.xml"],
      "detection": ["React", "Vue", "HTML", "HTMX", "frontend", "web app", "PWA", "SPA", "Vite"]
    },
    "cli": {
      "modules": ["modules/rust.xml"],
      "detection": ["CLI", "command-line", "terminal", "Rust", "clap"]
    },
    "api": {
      "modules": ["modules/testing.xml"],
      "detection": ["REST", "API", "backend", "Express", "FastAPI", "Flask"]
    }
  },
  
  "states": {
    "initialization": {
      "entry_point": "commands/auto-init.xml"
    },
    "development": {
      "entry_point": "commands/auto-continue.xml"
    },
    "stuck": {
      "modules": ["modules/recovery.xml"],
      "trigger": "3+ failed attempts on same feature"
    }
  }
}
